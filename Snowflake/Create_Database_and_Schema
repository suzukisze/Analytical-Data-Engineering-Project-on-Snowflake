create or replace database Walmart;

create or replace schema raw;

create or replace table walmart.raw.store (
    store_key varchar(30),
    addr varchar(500),
    city varchar(50),
    region varchar(100),
    cntry_cd varchar(30),
    cntry_nm varchar(30),
    postal_zip_cd varchar(10),
    prov_state_desc	varchar(30),
    prov_state_cd varchar(30),
    store_type_cd varchar(30),
    store_type_desc varchar(100),
    frnchs_flg boolean,
    store_size numeric,
    market_key integer,
    market_name varchar(150),
    submarket_key integer,
    submarket_name varchar(150),
    latitude numeric(19, 6),
    longitude numeric(19, 6)
);

create or replace table walmart.raw.product (
    prod_key integer,
    prod_name varchar(30),
    vol	number(38,2),
    wgt	number(38,2),
    brand_name varchar(100),
    status_code varchar(30),
    status_code_name varchar(30),
    category_key integer,
    category_name varchar(30),
    subcategory_key	integer,
    subcategory_name varchar(30)
);

create or replace table walmart.raw.Inventory (
    cal_dt date,
    store_key int,
    prod_key int,
    inventory_on_hand_qty number(38,2),
    inventory_on_order_qty number(38,2),
    out_of_stock_flg boolean,
    waste_qty number(38,2),
    promotion_flg boolean,
    next_delivery_dt date
);

create or replace table walmart.raw.sales (
    trans_id	date,
    prod_key	int,
    store_key	int,
    trans_dt	date,
    trans_time	int,
    sales_qty	number(38,2),
    sales_price	number(38,2),
    sales_amt	number(38,2),
    discount	number(38,2),
    sales_cost	number(38,2),
    sales_mgrn	number(38,2),
    ship_cost	number(38,2)
);

create or replace table walmart.raw.calendar (
    cal_dt	date,
    cal_type_desc	varchar(30),
    day_of_wk_num	integer,
    day_of_wk_desc	varchar(30),
    yr_num	integer,
    wk_num	integer,
    yr_wk_num	integer,
    mnth_num	integer,
    yr_mnth_num	integer,
    qtr_num	integer,
    yr_qtr_num	integer
);WALMART.RAW
